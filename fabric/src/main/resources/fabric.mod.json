{
  "schemaVersion": 1,
  "id": "mcgpt",
  "version": "${version}",
  "name": "MCGPT",
  "description": "A mod that provides a chat command to interact with ChatGPT in the context of Minecraft.",
  "authors": [
    "Bawnorton"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },
  "license": "MIT License",
  "icon": "assets/mcgpt/icon.png",
  "environment": "*",
  "entrypoints": {
    "client": [
      "com.bawnorton.mcgpt.fabric.MCGPTFabric"
    ]
  },
  "mixins": [
    "mcgpt.mixins.json",
    "mcgpt-common.mixins.json"
  ],
  "depends": {
    "fabric": "*",
    "minecraft": ">=1.19.3",
    "architectury": ">=7.1.70",
    "fabric-api": ">=0.75.1"
  }
}